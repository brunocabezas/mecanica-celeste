.modal
  clearfix()
  padding
  .close
    color white
    fill white
    top 0
    right 0
  .app__modal-info,
  .app__modal-player
    column(1/2)

  .app__modal-info
    h2
      margin-top: 0
    p
      color white
  .app__modal-player div
    position: relative
    .player {
      position: absolute;
      top: 0;
      max-width:"100%"
      left: 0;
      width: 100%;
      height: 100%;
    }