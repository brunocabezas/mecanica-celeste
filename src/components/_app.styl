
.app
	height calc(100%)
	width calc(100%)
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	margin 0
	padding 1.5rem
	background-color black
	color white
	position absolute

	&__title
		width 245px
		position absolute
		right 1.5rem
		color white
		top 1.5rem
		margin 0
		text-align right
		text-transform uppercase

	&__loader
		height calc(100%)
		width calc(100%)
		display flex
		align-items center
		justify-content center
		font-family sans-serif

	&__content
		display flex
		justify-content center
		align-items center
		height calc(100%)
		width calc(100%)


.signal-loader {
    border: 3px solid white;
    border-radius: 30px;
    height: 30px;
    left: 50%;
    margin: -15px 0 0 -15px;
    opacity: 0;
    position: absolute;
    top: 50%;
    width: 30px;

    animation: pulsate 1s ease-out;
    animation-iteration-count: infinite;
}

@keyframes pulsate {
    0% {
      transform: scale(.1);
      opacity: 0.0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: scale(1.2);
      opacity: 0;
    }
}
