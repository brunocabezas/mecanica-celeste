.about
  color white
  height 100%
  .about__logos
    background-image url('../../public/logos.png');
    background-size cover
    background-position center
    height 130px
    width 100%
    margin 0 auto
  .about__text
    max-width 560px
    text-align justify
    margin 0 auto
    p, dt
      font-family Roboto-Light
      font-weight normal
    h3
      margin 0
    a
      color white
      &:hover
        opacity .8
  .about__video
    text-align center
    iframe
      width 560px
      height 300px
