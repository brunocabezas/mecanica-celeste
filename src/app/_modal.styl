
.modal
  .close
    color white
    fill white
    top 15px
    right 15px

  .modal-title
    color: white;

  .modal-title,
  .modal-player
    max-width 800px

  .modal-player
    text-align center
    display block
    margin 0 auto
    width 100%

  @media screen and (max-width: 600px)
    flex-direction column
    position absolute
    top 0
    right 0
    left 0
    width 100%
    .close
      top 10
      right 10

    .modal-info,
    .modal-player
     flex 1

     .modal-player
       width 100%
       div
         width 100%
